<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>zoomcat</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans&family=Poppins&family=Roboto&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>
    <div class="nav">
        <div class="signup">
            <a href="/login"><button class="btn">Login</button></a>
            <a href="/register"><button class="btn">Sign up</button></a>
        </div>
    </div>
    <div class="container">

        <div class="title">
            <a href="/">
                <h1>zoomcat</h1>
            </a>
            <p class="description">Search from zoom chat history files</p>

        </div>

        <div class="upload">
            <form action="/" method="post" enctype="multipart/form-data">
                <label class="file-upload" for="files">Select file(s) to upload and submit</label>
                <br>
                <input type="file" name="files" id="files" multiple>
                <button class="btn" type="submit">Submit</button>
            </form>

        </div>

        <div class="msg">
            <p class="msg-text">
                <%= msg %>
            </p>
        </div>
        <div class="search">

            <h2 class="search">Search</h2>
            <form action="/search" method="post">
                <input type="text" name="query">
                <button class="btn" type="submit">Search</button>
            </form>
        </div>
        <div class="results">

            <% if(messages.length> 0) { %>
                <h3 class="results">Results</h3>
                <hr>
                <% messages.forEach(message=> { %>
                    <div class="message">

                        <p class="sender">Sender: <%= message.sender %>
                        </p>
                        <p class="content">Message:
                            <%= message.content %>
                        </p>
                    </div>
                    <% })} %>
        </div>
    </div>
</body>

</html>